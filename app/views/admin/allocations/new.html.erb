<h1>New Allocation</h1>

<%= form_with(model: @allocation, url: admin_allocations_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, ['Food', 'Clothes', 'Medicine', 'Emergency Funds', 'Other Needs'], {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Allocation', class: 'btn btn-primary' %>
  </div>
<% end %>