<div class="min-h-screen bg-blue-300 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-1/2">
    <h1 class="text-2xl font-bold text-center mb-6">New Allocation</h1>

    <%= form_with(model: @allocation, url: admin_allocations_path, method: :post) do |form| %>
      <div class="mb-4">
        <%= form.label :category, class: 'block text-lg font-semibold mb-2' %>
        <%= form.select :category, ['Food', 'Clothes', 'Medicine', 'Emergency Funds', 'Other Needs'], {}, class: 'form-control w-full px-4 py-2 border rounded-lg' %>
      </div>

      <div class="mb-4">
        <%= form.label :amount, class: 'block text-lg font-semibold mb-2' %>
        <%= form.number_field :amount, step: 0.01, class: 'form-control w-full px-4 py-2 border rounded-lg' %>
      </div>

      <div class="text-center">
        <%= form.submit 'Create Allocation', class: 'bg-blue-500 text-white font-bold py-2 px-6 rounded hover:bg-blue-600' %>
      </div>
    <% end %>
  </div>
</div>
