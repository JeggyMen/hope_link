<div class="min-h-screen bg-blue-300 p-6 flex flex-col space-y-6">
  <!-- Donors List Heading -->
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-4 text-center">List of Donors</h1>

    <!-- Donors Table -->
    <table class="w-full table-auto border-collapse">
      <thead>
        <tr class="bg-blue-200 text-left">
          <th class="px-4 py-2 border-b">Name</th>
          <th class="px-4 py-2 border-b">Email</th>
          <th class="px-4 py-2 border-b">Phone Number</th>
        </tr>
      </thead>
      <tbody>
        <% @donors.each do |donor| %>
          <tr class="hover:bg-gray-100">
            <td class="px-4 py-2 border-b"><%= donor.name %></td>
            <td class="px-4 py-2 border-b"><%= donor.email %></td>
            <td class="px-4 py-2 border-b"><%= donor.phone_number %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Back to Admin Dashboard Link -->
  <div class="text-center">
    <%= link_to 'Back to Admin Dashboard', admin_dashboard_path, class: 'bg-blue-500 text-white font-bold py-2 px-6 rounded hover:bg-blue-600' %>
  </div>
</div>
