<div class="bg-blue-50 min-h-screen p-6"> 
  <h2 class="text-2xl font-bold text-center mb-6"><%= resource_name.to_s.humanize %> Edit</h2>

  <div class="p-6 rounded-lg shadow-lg max-w-lg mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.email_field :email, class: "w-full p-2 border border-gray-300 rounded-md", autofocus: true, autocomplete: "email" %>
      </div>

      <!-- Pending Confirmation Message -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="bg-yellow-100 p-2 rounded-md mb-4 text-yellow-700">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
        <span class="text-sm text-gray-500">(Leave blank if you don't want to change it)</span><br />
        <%= f.password_field :password, class: "w-full p-2 border border-gray-300 rounded-md", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <small class="text-gray-500 block mt-1"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, class: "w-full p-2 border border-gray-300 rounded-md", autocomplete: "new-password" %>
      </div>

      <!-- Current Password Field -->
      <div class="mb-4">
        <%= f.label :current_password, class: "block text-gray-700 font-semibold mb-2" %>
        <span class="text-sm text-gray-500">(We need your current password to confirm your changes)</span><br />
        <%= f.password_field :current_password, class: "w-full p-2 border border-gray-300 rounded-md", autocomplete: "current-password" %>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <%= f.submit "Update", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Back", :back, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
