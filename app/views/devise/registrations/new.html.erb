
<div class="flex h-screen overflow-hidden">
  <!-- Left Side: Sign Up Form -->
  <div class="w-1/2 bg-white flex flex-col justify-center items-center p-8">
    <h2 class="text-3xl font-bold mb-6">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="w-full max-w-lg">
        <!-- Error Messages -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name Field -->
        <div class="mb-4">
          <%= f.label :name, class: 'block text-lg font-medium text-gray-700' %>
          <%= f.text_field :name, autofocus: true, class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>

        <!-- Email Field -->
        <div class="mb-4">
          <%= f.label :email, class: 'block text-lg font-medium text-gray-700' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>

        <!-- Password Field -->
        <div class="mb-4">
          <%= f.label :password, class: 'block text-lg font-medium text-gray-700' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>

        <!-- Password Confirmation -->
        <div class="mb-4">
          <%= f.label :password_confirmation, class: 'block text-lg font-medium text-gray-700' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>

        <!-- Phone Number Field -->
        <div class="mb-4">
          <%= f.label :phone_number, class: 'block text-lg font-medium text-gray-700' %>
          <%= f.text_field :phone_number, class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Sign up", class: 'w-full bg-blue-500 text-white font-semibold px-4 py-2 border border-blue-500 rounded hover:bg-blue-600 transition-colors duration-300' %>
        </div>
      </div>
    <% end %>

  
  </div>

  <!-- Right Side: Logo and Sign-Up Button -->
  <div class="w-1/2 bg-blue-300 text-white flex flex-col justify-center items-center p-8">
    <!-- Logo -->
    <div class="mb-10">
      <%= image_tag 'hope_link_logo.png', alt: 'Hope Link Logo', class: 'w-60 h-60 mx-auto' %>
    </div>

    <!-- Log in Up Button -->
    <div>
      <a href="<%= user_session_path %>" class="bg-blue-700 text-black font-semibold px-6 py-2 border border-black-500 rounded hover:bg-white-400 transition-colors duration-300">
        Log In
      </a>
    </div>
  </div>
</div>
