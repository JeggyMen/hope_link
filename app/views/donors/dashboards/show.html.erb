<!-- Main Wrapper with Baby Blue Background Covering the Full Screen -->
<div class="bg-blue-100 min-h-screen py-6">
  <!-- Remove the White Background Container, Add Small Margins to Utilize Full Screen -->
  <div class="mx-4 lg:mx-8">

    <!-- Main Container -->
    <div class="bg-white p-4 rounded-lg shadow-md flex justify-between items-center">
      <!-- Name and Buttons Section -->
      <h1 class="text-2xl font-bold"><%= @donor.name %></h1>

      <!-- Buttons for Transparency Board, Add Donation, and Edit Details -->
      <div class="space-x-2">
        <%= link_to 'Transparency Board', transparency_dashboard_path, class: 'inline-block bg-gray-400 hover:bg-gray-600 text-black font-bold py-2 px-4 rounded' %>
        <%= link_to 'Add donation', new_donors_donation_path, class: 'inline-block bg-gray-400 hover:bg-gray-600 text-black font-bold py-2 px-4 rounded' %>
        <%= link_to edit_user_registration_path(@donor), class: 'inline-block' do %>
          <button class="bg-gray-400 hover:bg-gray-600 text-black font-bold py-2 px-4 rounded">
            Edit Details
          </button>
        <% end %>
      </div>
    </div>

    <!-- Contact Details Section -->
    <div class="bg-white p-6 mt-4 rounded-lg shadow-lg">
      <div class="flex items-center space-x-4 mb-2">
        <div class="text-blue-600 font-bold text-lg">Email</div>
        <p class="text-lg"><%= @donor.email %></p>
      </div>
      <div class="flex items-center space-x-4">
        <div class="text-blue-600 font-bold text-lg">Phone Number</div>
        <p class="text-lg"><%= @donor.phone_number %></p>
      </div>
    </div>

    <!-- Donations Table -->
    <h2 class="text-xl font-bold mt-6 mb-4">Your Donations</h2>
    <table class="min-w-full bg-white rounded-lg shadow-md">
      <thead>
        <tr class="bg-blue-300 text-left">
          <th class="py-2 px-4">ID</th>
          <th class="py-2 px-4">Date</th>
          <th class="py-2 px-4">Amount (â‚±)</th>
        </tr>
      </thead>
      <tbody>
        <% @donations.each do |donation| %>
          <tr class="border-b">
            <td class="py-2 px-4"><%= donation.id %></td>
            <td class="py-2 px-4"><%= donation.donation_date %></td>
            <td class="py-2 px-4"><%= donation.amount %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
