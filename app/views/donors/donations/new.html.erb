<div class="flex items-center justify-center min-h-screen bg-blue-300">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <%= form_with model: @donation, url: donors_donations_path, local: false do |form| %>
      <div class="mb-4">
        <%= form.label :amount, class: 'block text-lg font-medium text-blue-600' %>
        <div class="flex items-center space-x-2">
          <span class="text-lg">â‚±</span>
          <%= form.number_field :amount, step: 0.01, class: 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300' %>
        </div>
      </div>

      <div class="mt-4 text-center">
        <%= form.submit 'Send Donation', class: 'bg-gray-400 hover:bg-gray-600 text-black font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>
</div>
